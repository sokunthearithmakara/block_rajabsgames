<div class="rg_levels mb-3">
    <h5 class="text-gray d-flex align-items-center justify-content-between section-header">
        <div class="d-flex align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bar-chart-fill" viewBox="0 0 16 16">
            <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1z"/>
        </svg>
        <span class="iv-ml-2">{{#str}}levels, block_rajabsgames{{/str}}</span>
        </div>
        <button class="btn btn-sm btn-light" id="add-level" type="button" title="{{#str}}addlevel, block_rajabsgames{{/str}}">
            <i class="fa fa-plus iv-mr-2"></i>{{#str}}addlevel, block_rajabsgames{{/str}}
        </button>
    </h5>
    <ul class="rg_level_list p-0">
        {{>block_rajabsgames/level}}
        {{^levels}}
        <div class="text-muted w-100 text-center my-5 empty-message">{{#str}}nolevels, block_rajabsgames{{/str}}</div>
        {{/levels}}
    </ul>
</div>
<div class="rg_badges mb-4">
    <h5 class="text-gray d-flex align-items-center justify-content-between section-header">
        <div class="d-flex align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-fill-check" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.8 11.8 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7 7 0 0 0 1.048-.625 11.8 11.8 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.54 1.54 0 0 0-1.044-1.263 63 63 0 0 0-2.887-.87C9.843.266 8.69 0 8 0m2.146 5.146a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793z"/>
            </svg>
        <span class="iv-ml-2">{{#str}}badges, block_rajabsgames{{/str}}</span>
        </div>
        <button class="btn btn-sm btn-light" id="add-badge" type="button" title="{{#str}}addbadge, block_rajabsgames{{/str}}">
            <i class="fa fa-plus iv-mr-2"></i>{{#str}}addbadge, block_rajabsgames{{/str}}
        </button>
    </h5>
    {{#usedbadges}}
    <div class="alert alert-warning">
        <i class="fa fa-exclamation-triangle iv-mr-2"></i>
        {{#str}}somebadgesareused, block_rajabsgames{{/str}}
    </div>
    {{/usedbadges}}
    <ul class="rg_badges_list p-0 list-unstyled">
        {{>block_rajabsgames/badge}}
        {{^badges}}
        <div class="text-muted w-100 text-center my-5 empty-message">{{#str}}nobadges, block_rajabsgames{{/str}}</div>
        {{/badges}}
    </ul>
</div>

{{#js}}
if (document.querySelector('body').classList.contains('pagelayout-admin')) {
    require(['block_rajabsgames/block_main'], function(block_rajabsgames_block) {
        block_rajabsgames_block.init({{blockid}}, {{contextid}}, {{courseid}}, {{userid}});
    });
}
{{/js}}