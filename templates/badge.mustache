{{#badges}}
{{^unused}}
<li class="rg_badge_item iv-mb-2 d-inline-flex flex-column align-items-center iv-rounded-lg bg-light p-2 mb-1 justify-content-between position-relative" data-id="{{id}}">
    <div class="d-flex flex-column align-items-center w-100">
        <img class="rg_badge_picture {{classes}}"
             src="{{picture}}"
             alt="{{name}}"
             width="60"
             height="60" />
        <div class="rg_badge_name py-2 px-1 w-100 {{#isblock}}text-truncate{{/isblock}}" title="{{name}}">{{name}}</div>
    </div>
    {{^isblock}}
    <div class="actions">
        <button class="btn btn-sm iv-mr-1 edit-badge"
                data-id="{{id}}"
                data-used="{{used}}"
                type="button"
                title="{{#str}}editbadge, block_rajabsgames{{/str}}">
            <i class="fa fa-edit"></i>
        </button>
        {{^used}}
        <button class="btn btn-sm text-danger delete-badge"
                data-id="{{id}}"
                type="button"
                title="{{#str}}deletebadge, block_rajabsgames{{/str}}">
            <i class="fa fa-trash"></i>
        </button>
        {{/used}}
    </div>
    {{/isblock}}
    {{#isblock}}
    {{#badgecount}}
    <small class="text-muted">
    {{mine}} / {{badgecount}}
    </small>
    {{^classes}}
    <i class="fa fa-check-circle text-success badge-complete position-absolute"></i>
    {{/classes}}
    {{/badgecount}}
    {{/isblock}}
</li>
{{/unused}}
{{/badges}}
